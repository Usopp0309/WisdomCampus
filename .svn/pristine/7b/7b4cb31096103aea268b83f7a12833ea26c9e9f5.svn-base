	<select id="getClazzListByParentId" parameterClass="Integer" resultClass="clazz">
	     	SELECT c.id ,getClazzName(c.id) clazzName , c.leaderId , getClazzName(c.id) as fullClazzName,g.name as gradeName ,g.type 
