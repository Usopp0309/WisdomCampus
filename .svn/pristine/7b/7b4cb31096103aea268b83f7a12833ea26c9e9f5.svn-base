	<!-- 修改班级  update by shengyinjiang 20151126-->
	<update id="modifyClazz" parameterClass="HashMap">
		 update palm_clazz
		    set updatetime = NOW()
		    	<isNotEmpty property="code">
		    	,code = #code#
		    	</isNotEmpty>
		    	<isNotEmpty property="leaderId">
		    	,leaderId = #leaderId#
		    	</isNotEmpty>
		    	<isNotEmpty property="clazzName">
		    	,clazzName = #clazzName#
		    	</isNotEmpty>		        
		    where id = #clazzId#	
	</update>	
