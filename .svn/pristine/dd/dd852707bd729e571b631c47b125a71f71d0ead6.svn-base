	<script>
		jQuery(document).ready(function() {
			loadSubMenu("schoolManager");  
			//选取当前菜单位置
			setActive("schoolManager","teacherManage"); 
			//页面初始化时候的数据加载
			var userId = $("#userTab li.active").find('a').attr("attr1");
			var roleCode = $("#userTab li.active").find('a').attr("attr2");
			//加载初始化数据
			loadTeacherList(null, userId, roleCode, null);
			//点击tab页加载
			$("#userTab li a").click(function(){
				$("#userTab li").removeAttr("class");
				$(this).parent().addClass("active");
				//用户ID
				var userId = $(this).attr("attr1");
				var roleCode = $(this).attr("attr2");
				//工号
				var code = $("#code").val();
				//电话
				var username = $("#phone").val();
				//姓名
				var name = $("#name").val();
				loadTeacherList(null, userId, roleCode, null);
			});

			//点击进入增加教师页面
			$("#addTeacher").click(function(){
				var userId = $("#userTab li.active").find('a').attr("attr1");	
				var roleCode = $("#userTab li.active").find('a').attr("attr2");
				window.location.href='<%=basePath%>teacher/toAddTeacher.do?userId=' + userId +'&roleCode=' + roleCode;
			});

			//点击进入导入教师页面
			$("#importTeacher").click(function(){
				var userId = $("#userTab li.active").find('a').attr("attr1");	
				var roleCode = $("#userTab li.active").find('a').attr("attr2");
				window.location.href='<%=basePath%>teacher/toImportTeacher.do?userId=' + userId +'&roleCode=' + roleCode;
			});
			
			//条件查询
			$("#search").click(function(){
				var userId = $("#userTab li.active").find('a').attr("attr1");
				var roleCode = $("#userTab li.active").find('a').attr("attr2");
				//查询条件
				var queryContent = $.trim($("#queryContent").val());
				loadTeacherList(queryContent, userId, roleCode, null);
			});
			
			$("#queryContent").keypress(function(event){
				if(event.which == "13")    
            	{
					$("#search").click();
					return false;	
            	}
			});	
			
		});
		

		//加载教师页面
		function loadTeacherList(queryContent, userId, roleCode, cPage)
		{
			var body = $("#body");
			App.blockUI(body);
			
			$.ajax({
				type: "post",
				url: "<%=basePath%>teacher/getTeacherList.do",
				data:{
						queryContent : queryContent,
						userId : userId,
						roleCode : roleCode,
						cPage : cPage
				},
				success: function(data){
					var page = eval("(" + data + ")");
					$("#currentPage").html(page.currentPage);
					$("#totalPage").html(page.totalPage);
					var appendHtml = '';
					$.each(page.list, function(n, value) {  
							appendHtml += '<tr>';
           				appendHtml += '<td>' + value.code + '</td>';
            			appendHtml += '<td >' + value.realName + '</td>';
            			appendHtml += '<td>' + value.phone + '</td>';

            			if(value.cardCode == undefined || value.cardCode == "null" || value.cardCode == "")
               			{
            				appendHtml += '<td></td>';//卡号
               			}else
               			{
        					appendHtml += '<td>' + value.cardCode + '</td>';//卡号
               			}
	
            			appendHtml += '<td  class="Response">' + value.roleName + '</td>';
            			appendHtml += '<td >' + value.departmentName+ '</td>';
            			var time = value.updateTime;
						if (typeof(time)=="undefined"){
							time =value.createTime;;
							if (typeof(time)=="undefined"){
								time ="";
							}else{
								time = time.substr(0, time.length-2)
							}
						}else{
							time = time.substr(0, time.length-2)
						}
            			appendHtml += '<td>' + time + '</td>';
            			appendHtml += '<td><r:right rightCode="teacherDelete"><a href="javascript:;" class="btn btn-sm green" onclick="modifyTeacher(' + value.userId + ',\'' + value.roleCode + '\',' + value.departmentId +')">修改</a></r:right><c:if test="${sessionScope.user.type != 2}"><r:right rightCode="teacherModify"><a href="javascript:;" class="btn btn-sm red" onclick="delTeacher(' + value.userId + ')">删除</a></r:right></c:if></td>';
           				appendHtml += '</tr>';
          			}); 
          			$("#tbody").html(appendHtml);
          			//解锁UI
          			App.unblockUI(body);
				},
			});
		}

		//点击修改教师页面
		function modifyTeacher(teacherId,roleCode,departmentId)
		{
			$("body,html",parent.document).animate({ scrollTop: 0 }, 200);
			var userId = $("#userTab li.active").find('a').attr("attr1");	
			window.location.href='<%=basePath%>teacher/toModifyTeacher.do?userId='
				 + userId +'&roleCode=' + roleCode + '&teacherId=' + teacherId + '&departmentId=' + departmentId;
		}
		function delTeacher(teacherId){
			var l_=layer.confirm('确定删除？', {
				  btn: ['确定','取消'] //按钮
				}, function(){
					layer.close(l_);
					var indexlayer = layer.msg('正在删除数据,请稍候。。。',{icon: 16,time:0,shade:0.3});
					$.ajax({
						type: "post",
						url: "<%=basePath%>teacher/delTeacher.do",
						data:{
							teacherId : teacherId
						},
						success: function(data){
							if (data == '0'){
								layer.msg("删除成功！",{icon:1,time:1000});
								//页面初始化时候的数据加载
								var userId = $("#userTab li.active").find('a').attr("attr1");
								var roleCode = $("#userTab li.active").find('a').attr("attr2");
								//加载初始化数据
								loadTeacherList(null, userId, roleCode, null);
							}else{
								layer.msg("删除失败！",{icon:2,time:1000});
							}
						},
					});
				}, function(){
				  layer.close(indexlayer);
				  layer.close(l_);
				});
		}

		//分页相关
		function jumpPage(type)
		{
			var cPage = $("#currentPage").html();
			var totalPage = $("#totalPage").html();

			var cPageInt = parseInt(cPage);
			var totalPageInt = parseInt(totalPage);
						
			//跳转到首页
			if (type == 'first')
			{
				if (cPageInt == 1)
				{
					return;
				}
				cPageInt = 1;
			}
			//上一页
			if (type == 'previous')
			{
				//不是首页
				if (cPageInt != 1)
				{
					cPageInt = cPageInt - 1;
				}
				else
				{
					return;
				}
			}
			//下一页
			if (type == 'next')
			{
				//不是尾页
				if (cPageInt < totalPageInt)
				{
					cPageInt = cPageInt + 1;
				}
				else 
				{
					return;
				}
			}
			//跳转到尾页
			if (type == 'last')
			{
				if (cPageInt == totalPageInt)
				{
					return;
				}
				cPageInt = totalPageInt;
			}	


			//用户ID
			var userId = $("#userTab li.active").find('a').attr("attr1");
			var roleCode = $("#userTab li.active").find('a').attr("attr2");
			
			//查询条件
			var queryContent = $.trim($("#queryContent").val());
		
			loadTeacherList(queryContent, userId, roleCode, cPageInt);
			$("#currentPage").html(cPageInt);
		}

	</script>
</html>